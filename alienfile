use alienfile;
 
share {
    plugin Download => (
        url => 'https://github.com/Z3Prover/z3/archive/z3-4.8.4.tar.gz'
    );
 
    plugin Extract => 'tar.gz';
 
    plugin 'Build::CMake';
 
    build [
        [ '%{cmake}', -G => '%{cmake_generator}',
          '-DCMAKE_INSTALL_PREFIX:PATH=%{.install.prefix}'],
 
        '%{cmake} --build .',
        '%{cmake} --build . --target install'
    ];
 
    plugin 'Gather::IsolateDynamic' => ();
};


